<%= form_for([location, project, campaign]) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dollar_goal %>
    <%= f.number_field :dollar_goal, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :project_id %>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.datetime_local_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.datetime_local_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time_zone %>
    <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, default: "Pacific Time (US & Canada)", class: "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :active?, 'Active' %>
    <%= f.radio_button :active?, "Active", checked: true, class: "form-control" %>
    <%= f.label :active?, 'Inactive' %>
    <%= f.radio_button :active?, "Inactive", checked: false, class: "form-control" %>
  <end>

  <%= f.submit 'Submit', class: "btn btn-default" %>
<% end %>
